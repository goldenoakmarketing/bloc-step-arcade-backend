# Server
PORT=3000
NODE_ENV=production

# CORS (comma-separated list of allowed origins, defaults to Netlify URLs)
ALLOWED_ORIGINS=https://blocsteparcade.netlify.app

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-key

# Blockchain
RPC_URL=https://mainnet.base.org
GAME_SERVER_PRIVATE_KEY=0x...your-private-key...

# Contract Addresses (Base Mainnet) - these are the defaults, override if needed
ARCADE_VAULT_ADDRESS=0x04bA29B0aD6bAcFA0236Fce688a7536ADfc5F17B
TIP_BOT_ADDRESS=0xAAc499D71F642F134AdC699b3f11572163A7FD3E
YEET_ENGINE_ADDRESS=0xcD4ac644DB51455d736E0e3aE416C3c373185e48
STAKING_POOL_ADDRESS=0xa3465cfD544c6B11C3BBeD5203AEC739976059D4
BLOC_TOKEN_ADDRESS=0x022c6cb9Fd69A99cF030cB43e3c28BF82bF68Fe9
POOL_PAYOUT_ADDRESS=0xb440AE06aC5ceF3Eb837FDF353459Fb8eFF3556d

# Farcaster (Neynar)
NEYNAR_API_KEY=your-neynar-api-key
NEYNAR_WEBHOOK_SECRET=your-webhook-secret

# Event Listener
# START_BLOCK=0 means start from current block (no backfill)
# Set to a specific block number to backfill from that point
START_BLOCK=0
POLLING_INTERVAL_MS=5000

# Optional: Mock Mode (for testing without blockchain/database)
MOCK_MODE=false
